<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tp2.tpalt.upmc.quizzforfriend"
    >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".QuizzForFriend"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Quiz">
        <activity
            android:clearTaskOnLaunch="true"
            android:name=".MainActivity"
            android:uiOptions="splitActionBarWhenNarrow"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ThemeActivity"
            android:theme="@style/FullscreenTheme"
            android:uiOptions="splitActionBarWhenNarrow"/>
        <activity android:name=".QuizzActivity"
            android:theme="@style/FullscreenTheme"
            android:uiOptions="splitActionBarWhenNarrow"
            android:clearTaskOnLaunch="true"/>
        <activity android:name=".ListThemeActivity"
            android:theme="@style/FullscreenTheme"
            android:uiOptions="splitActionBarWhenNarrow"/>
        <activity android:name=".ListItemDetailActivity"
            android:theme="@style/FullscreenTheme"
            android:uiOptions="splitActionBarWhenNarrow" android:clearTaskOnLaunch="true"/>
        <activity android:name=".DisplayResultActivity"
            android:theme="@style/FullscreenTheme"
            android:uiOptions="splitActionBarWhenNarrow" android:clearTaskOnLaunch="true"/>

        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>
</manifest>